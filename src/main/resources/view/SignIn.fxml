<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="285.0" prefWidth="425.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <Button id="loginbtn" fx:id="loginbtn" alignment="CENTER" contentDisplay="CENTER" layoutX="311.0" layoutY="186.0" mnemonicParsing="false" onAction="#Login" prefHeight="25.0" prefWidth="63.0" text="Sign In" textAlignment="CENTER" />
        <Label layoutX="225.0" layoutY="69.0" text="Username">
            <font>
                <Font name="Comic Sans MS Bold" size="12.0" />
            </font>
        </Label>
        <TextField id="txtusername" fx:id="txtusername" layoutX="225.0" layoutY="86.0" promptText="Enter Username" />
        <Label layoutX="225.0" layoutY="111.0" text="Password">
            <font>
                <Font name="Comic Sans MS Bold" size="12.0" />
            </font>
        </Label>
        <PasswordField id="txtpassword" fx:id="txtpassword" layoutX="225.0" layoutY="129.0" promptText="Enter Password" />
        <Label id="signupLabel" layoutX="243.0" layoutY="227.0" text="Not Registered? " />
        <Hyperlink fx:id="registerHyp" layoutX="332.0" layoutY="224.0" onAction="#GoToRegister" text="SignUp" />
        <ImageView fx:id="orderImageView" fitHeight="289.0" fitWidth="200.0" pickOnBounds="true" smooth="false">
            <image>
                <Image url="@../image/logo.jpg" />
            </image>
        </ImageView>
        <Label fx:id="errorLabel" layoutX="227.0" layoutY="161.0" prefHeight="17.0" prefWidth="149.0" />
    </children>
</AnchorPane>
